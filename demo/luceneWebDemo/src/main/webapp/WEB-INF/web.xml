<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  
  <servlet>
  	<servlet-name>SearcherServlet</servlet-name>
  	<description></description>
  	<servlet-class>com.lucene.servlet.SearcherServlet</servlet-class>
  </servlet>
  <servlet>
  	<servlet-name>CreateIndexServlet</servlet-name>
  	<display-name>CreateIndexServlet</display-name>
  	<description></description>
  	<servlet-class>com.lucene.servlet.CreateIndexServlet</servlet-class>
  </servlet>
  <servlet-mapping>
  	<servlet-name>SearcherServlet</servlet-name>
  	<url-pattern>/search</url-pattern>
  </servlet-mapping>
  <servlet-mapping>
  	<servlet-name>CreateIndexServlet</servlet-name>
  	<url-pattern>/createIndex</url-pattern>
  </servlet-mapping>
</web-app>
